    app.controller("BankData", ['$scope', '$http', function ($scope, $http) {
        $scope.Page = "Banks";
        $scope.success = false;
        $scope.failed = false;
        $scope.btnAdd = "Add Bank";
        $scope.btnUpdate = "Update Bank";
        $scope.message = "";
        $scope.display = "show";
        loadBanks();
        $scope.openModal = function (name) {

            $scope.updatebankName = name;
