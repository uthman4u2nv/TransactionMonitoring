                    $scope.failed = false;
                    $scope.message = response.data.responseMessage;
                    $scope.btnUpdate = "Update Bank";
                    Data.bankCode = "";
                    Data.bankName = "";
                } else {
                    $scope.success = false;
                    $scope.failed = true;
                    $scope.message = response.data.responseMessage;
